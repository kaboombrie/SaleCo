/* displays CUS_CODE and CUS_LNAME from CUSTOMER table where CUS_CODE matches 
in CUSTOMER and INVOICE table */

USE ch08_saleco;
SELECT CUS_CODE, CUS_LNAME
FROM CUSTOMER
WHERE EXISTS
(SELECT CUS_CODE FROM INVOICE WHERE CUSTOMER.CUS_CODE = INVOICE.CUS_CODE);


/* displays CUS_CODE, CUS_LNAME, CUS_PHONE from CUSTOMER where the phone
number starts with 894 */

USE ch08_saleco;
SELECT CUS_CODE, CUS_LNAME, CUS_PHONE
FROM CUSTOMER
WHERE CUS_PHONE LIKE '894%';


/* displays CUS_CODE, CUS_LNAME, CUS_PHONE from CUSTOMER where the phone
number starts with 894 */

USE ch08_saleco;
SELECT CUS_CODE, INV_NUMBER, INV_DATE, INV_SUBTOTAL
FROM INVOICE
WHERE CUS_CODE IN (10011, 10012)
AND INV_SUBTOTAL > 100;


